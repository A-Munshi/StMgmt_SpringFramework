<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
 http://www.springframework.org/schema/beans
 http://www.springframework.org/schema/beans/spring-beans.xsd">
    <!-- Address Beans (Constructor Injection) -->
    <bean id="addressStudent" class="com.example3.Address">
        <constructor-arg value="Kolkata"/>
        <constructor-arg value="West Bengal"/>
        <constructor-arg value="India"/>
    </bean>
    <bean id="addressTeacher" class="com.example3.Address">
        <constructor-arg value="Mumbai"/>
        <constructor-arg value="Maharashtra"/>
        <constructor-arg value="India"/>
    </bean>
    <!-- Student Bean (Setter Injection) -->
    <bean id="studentBean" class="com.example3.Student">
        <property name="id" value="101"/>
        <property name="name" value="Anuvab"/>
        <property name="address" ref="addressStudent"/>
    </bean>
    <!-- Teacher Bean (Constructor Injection) -->
    <bean id="teacherBean" class="com.example3.Teacher">
        <constructor-arg value="501"/>
        <constructor-arg value="Dr. Sony Bravia"/>
        <constructor-arg ref="addressTeacher"/>
    </bean>
    <!-- Course Bean (Setter Injection referencing others) -->
    <bean id="courseBean" class="com.example3.Course">
        <property name="courseName" value="Spring Framework
Basics"/>
        <property name="student" ref="studentBean"/>
        <property name="teacher" ref="teacherBean"/>
    </bean>
</beans>